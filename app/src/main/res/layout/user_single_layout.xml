<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/user_image_transparent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:id="@+id/user_single_image"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Display Username"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/user_single_image"
        app:layout_constraintTop_toTopOf="@+id/user_single_image"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="User Status"
        app:layout_constraintLeft_toLeftOf="@+id/user_single_name"
        app:layout_constraintTop_toBottomOf="@+id/user_single_name" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/user_single_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_online" />

</android.support.constraint.ConstraintLayout>